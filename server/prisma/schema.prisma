generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String   @id @default(uuid())
  name         String
  email        String?  @unique
  passwordHash String?
  avatar       String?
  theme        String   @default("dark")
  language     String   @default("fr")
  createdAt    DateTime @default(now())
  lastAccessed DateTime @updatedAt
  settings     Json?    // Stores API keys, preferences, etc.
  aiGenerationsCount Int @default(0) // Track AI usage for rate limiting
  
  courses    Course[]
  folders    Folder[]
  items      Item[]
  flashcards FlashcardSet[]
  quizzes    Quiz[]
  summaries  Summary[]
  studyPlans StudyPlan[]
  mindmaps   MindMap[]
  studySessions StudySession[]
  
  // FinanceTrack Relations
  financialAccounts FinancialAccount[]
  transactions      Transaction[]
  budgets           Budget[]
  banks             Bank[]
}

